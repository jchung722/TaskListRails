<h2>Task List</h2>
  <p><%= link_to("Add a new mission", new_path)%></p>

<% @tasks.each do |task| %>
  <h3><%= link_to(task[:name], show_path(task[:id])) %></h3>

  <p class="button">
    <%= button_to "Abort/Clear Mission", { action: "destroy", id: task[:id]},
                                  method: :delete, data: { confirm: "Are you sure?"} %>
  </p>

  <p class="button">
    <% if task[:completed] == false %>
      <%= button_to "Mission Accomplished", { action: "complete", id: task[:id]},
                                  method: :patch %>
    <% else %>
      <%= "ğŸ˜˜ Mission accomplished on #{task[:completed_at]}" %>
    <% end %>
  </p>

<% end %>
