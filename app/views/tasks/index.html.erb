<h2>Task List</h2>
<% @tasks.each do |task| %>
  <h3><%= link_to(task[:name], show_path(task[:id])) %></h3>
  <p>
    <%= button_to "Delete Task", { action: "destroy", id: task[:id]},
                                  method: :delete, data: { confirm: "Are you sure?"} %>
  </p>
  <p>
    <% if task[:completed] == false %>
      <%= button_to "Click If Complete", { action: "complete", id: task[:id]},
                                  method: :patch %>
    <% else %>
      <%= "Mission accomplished on #{task[:completed_at]}" %>
    <% end %>
  </p>
<% end %>
